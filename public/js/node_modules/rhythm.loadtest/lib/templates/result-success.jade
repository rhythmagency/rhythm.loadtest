- var isEmpty = function (o) { return (JSON.stringify(o) === '{}'); };

mixin property(label, text, classes)
	.row(class=classes)
		.col-sm-4
			b #{label}:&nbsp;
		.col-sm-8 #{text}

.alert.alert-dismissable.palette-turquoise
	button.close(type='button', data-dismiss='alert' aria-hidden='true') &times;

	h6 #{new Date()}

	+property('Mean Latency Ms', data.meanLatencyMs)
	+property('RPS', data.rps)
	+property('Total Requests', data.totalRequests)
	+property('Total Time (in seconds)', data.totalTimeSeconds)

	if data.percentiles && !isEmpty(data.percentiles)
		.alert.alert-success
			+property('Percentiles', '')
			- for(var i in data.percentiles) {
				- var p = data.percentiles[i];
				+property(i, p)
			- }

	+property('Total Errors', data.totalErrors)

	if data.errors && !isEmpty(data.errors)
		.alert.alert-danger
			+property('Errors', '')
			- for(var i in data.errors) {
				- var p = data.errors[i];
				+property(i, p)
			- }